<div class="mb-6">
    <%= link_to "新しいルーティンを作成", new_routine_path, class: "inline-block bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700" %>
  </div>

  <% if @routines.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @routines.each do |routine| %>
        <div class="bg-white shadow-md rounded-lg p-6 flex flex-col justify-between">
          <div>
            <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= routine.name %></h2>
            <p class="text-gray-600 text-sm mb-4"><%= routine.description.presence || "説明はありません。" %></p>
          </div>

          <div class="mt-auto">
            <%= link_to "詳細を見る", routine_path(routine), class: "inline-block w-full text-center bg-indigo-500 text-white py-2 px-4 rounded-md hover:bg-indigo-600" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500">まだルーティンが登録されていません。</p>
  <% end %>
</div>