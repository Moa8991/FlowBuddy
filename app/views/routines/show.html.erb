<div class="max-w-4xl mx-auto mt-12 px-4">
  <!-- ルーティン名と編集ボタン（画面遷移あり） -->
  <div class="flex items-center justify-center mb-10 space-x-4">
    <h1 class="text-4xl font-bold text-gray-900"><%= @routine.name %></h1>
    <%= link_to "編集", edit_routine_path(@routine), class: "text-sm text-indigo-600 hover:underline" %>
  </div>

  <p class="text-gray-600 mb-8 text-center"><%= @routine.description.presence || "説明はありません。" %></p>

  <!-- タスク一覧 -->
  <h2 class="text-xl font-semibold text-gray-700 mb-4">タスク一覧</h2>

  <% if @routine.tasks.any? %>
    <ul class="space-y-4 mb-8">
      <% @routine.tasks.each do |task| %>
        <li class="bg-white shadow-sm rounded-md p-4 flex justify-between items-center">
          <div>
            <p class="text-gray-800 font-medium"><%= task.title %></p>
            <p class="text-sm text-gray-500">目安時間: <%= task.estimated_min %> 分</p>
          </div>
          <div class="flex space-x-2">
            <%= button_to "削除", [@routine, task], method: :delete, data: { turbo_confirm: "本当に削除しますか？" }, class: "text-red-600 text-sm hover:underline bg-transparent p-0" %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-500 mb-8">まだタスクが登録されていません。</p>
  <% end %>

  <!-- タスク追加フォーム -->
  <h2 class="text-xl font-semibold text-gray-700 mb-4">新しいタスクを追加</h2>

  <%= form_with model: [@routine, @task], local: true do |f| %>
    <div class="space-y-4">
      <div>
        <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div>
        <%= f.label :estimated_min, "目安時間（分）", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :estimated_min, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div>
        <%= f.submit "追加する", class: "w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700" %>
      </div>
    </div>
  <% end %>
</div>
