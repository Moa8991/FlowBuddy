<%= form_with model: routine, url: name_routine_path(routine), method: :patch, data: { turbo_frame: "routine_name" } do |f| %>
  <div class="flex justify-center items-center space-x-4">
    <%= f.text_field :name, class: "text-3xl font-bold text-gray-900 border-b border-gray-300 focus:outline-none focus:border-indigo-500" %>
    <%= f.submit "保存", class: "text-sm text-white bg-indigo-600 px-3 py-1 rounded hover:bg-indigo-700" %>
  </div>
<% end %>